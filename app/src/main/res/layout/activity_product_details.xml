<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.ProductDetailsActivity">

    <ImageView
        android:id="@+id/deposit_logo"
        android:layout_width="117dp"
        android:layout_height="91dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/logo_teachme"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/deposit_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@tools:sample/lorem"
        />

    <ImageView
        android:id="@+id/product_details_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/marker"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/product_details_name"
        app:layout_constraintLeft_toLeftOf="@id/product_details_name"
        app:layout_constraintRight_toRightOf="@id/product_details_name"/>

    <TextView
        android:id="@+id/product_details_assoc_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/product_details_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@tools:sample/lorem"/>

    <TextView
        android:id="@+id/product_details_assoc_adress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/product_details_assoc_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@tools:sample/lorem"/>

    <TextView
        android:id="@+id/product_details_assoc_tel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/product_details_assoc_adress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@tools:sample/lorem"/>

    <TextView
        android:id="@+id/product_details_assoc_horaire"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/product_details_assoc_tel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@tools:sample/lorem"/>

</android.support.constraint.ConstraintLayout>